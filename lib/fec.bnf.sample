<program>         ::= <statement_list>

<statement_list>  ::= <statement> | <statement> "\n" <statement_list>

<statement>       ::= <assignment>
                    | <function_def>

<assignment>      ::= <cell_id> "=" <expression>

<function_def>    ::= "FUNC" <identifier> "(" <param_list> ")" "=" <expression>

<expression>      ::= <literal>
                    | <cell_id>
                    | <identifier>
                    | <expression> <binary_op> <expression>
                    | <function_call>
                    | "IF" "(" <expression> "," <expression> "," <expression> ")"
                    | "CONCAT" "(" <arg_list> ")"
                    | "(" <expression> ")"

<function_call>   ::= <identifier> "(" <arg_list> ")"

<arg_list>        ::= ε
                    | <expression>
                    | <expression> "," <arg_list>

<param_list>      ::= ε
                    | <identifier>
                    | <identifier> "," <param_list>

<binary_op>       ::= "+" | "-" | "*" | "/" | ">" | "<" | "==" | "!="

<literal>         ::= <number> | <string>

<cell_id>         ::= <column_letter> <row_number>

<column_letter>   ::= [A-Z]
<row_number>      ::= [1-9][0-9]*

<identifier>      ::= [a-zA-Z_][a-zA-Z0-9_]*
<number>          ::= [0-9]+ ( "." [0-9]+ )?
<string>          ::= "\"" .*? "\""
